  },
  "author": {
    "email": "william@saphewebdesign.com",
    "name": "William Ford"
  },
  "scripts": {
    "dev": "ts-node-dev --no-notify --respawn --transpile-only src/server",
    "build": "yarn clean && yarn generate && tsc",
    "start": "node .saphe/server",
    "clean": "rimraf .saphe",
    "lint": "eslint . --ext .ts --fix",
    "generate:prisma": "prisma generate",
    "generate:nexus": "ts-node --transpile-only src/schema",
    "generate": "yarn generate:prisma && yarn generate:nexus",
    "db:flush": "yarn tsn --files src/graphql/flush",
    "db:seed": "yarn tsn --files src/graphql/seed",
    "db:reset": "yarn db:flush && yarn db:seed",
    "tsn": "ts-node -T -r tsconfig-paths/register -r dotenv/config -O \"{\\\"module\\\":\\\"commonjs\\\"}\"",
    "postinstall": "yarn generate"
  },
  "dependencies": {
    "@prisma/client": "3.6.0",
    "apollo-server": "3.5.0",
    "graphql": "<16.0.0",
    "graphql-scalars": "1.14.1",
    "nanoid": "3.1.30",
    "nexus": "1.1.0",
    "nexus-prisma": "0.34.0"
  },
  "devDependencies": {
    "@types/node": "16.11.12",
    "@typescript-eslint/eslint-plugin": "5.6.0",
    "@typescript-eslint/parser": "5.6.0",
    "eslint": "8.4.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-prettier": "4.0.0",
    "prettier": "2.5.1",
    "prisma": "3.6.0",
    "rimraf": "3.0.2",
    "ts-node": "10.4.0",
    "ts-node-dev": "1.1.8",
    "typescript": "4.5.2"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
